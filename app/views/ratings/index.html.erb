<h1>Listing ratings</h1>

<table>
  <tr>
    <th>Lecture</th>
    <th>User</th>
    <th>Question</th>
    <th>Answer</th>
    <th>Page</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ratings.each do |rating| %>
  <tr>
    <td><%= rating.lecture_id %></td>
    <td><%= rating.user_id %></td>
    <td><%= rating.question_id %></td>
    <td><%= rating.answer_id %></td>
    <td><%= rating.page_id %></td>
    <td><%= link_to 'Show', rating %></td>
    <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
    <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

